<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_pickup_no"
                            android:textColor="@color/color_303030"
                            android:textSize="@dimen/text_size_30px" />

                        <TextView
                            android:id="@+id/text_sign_p_f_pickup_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:maxLines="1"
                            android:textColor="@color/color_ff0000"
                            android:textSize="@dimen/text_size_30px"
                            android:textStyle="bold"
                            tools:text="P19609734" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_e5e5e5" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <TextView
                            android:id="@+id/text_sign_p_f_applicant_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_applicant"
                            android:textColor="@color/color_303030"
                            android:textSize="@dimen/text_size_30px" />

                        <TextView
                            android:id="@+id/text_sign_p_f_applicant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:maxLines="2"
                            android:textColor="@color/color_303030"
                            android:textSize="@dimen/text_size_30px"
                            android:textStyle="bold"
                            tools:text="Jason Kwon" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_e5e5e5" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_request_qty"
                            android:textColor="@color/color_303030"
                            android:textSize="@dimen/text_size_30px" />

                        <TextView
                            android:id="@+id/text_sign_p_f_requested_qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/color_303030"
                            android:textSize="@dimen/text_size_30px"
                            android:textStyle="bold"
                            tools:text="10" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_e5e5e5" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/text_sign_p_f_failed_reason_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_pickup_failed_reason"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px" />

                    <RelativeLayout
                        android:id="@+id/layout_sign_p_f_failed_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/text_sign_p_f_failed_reason_title"
                        android:background="@drawable/border_radius_5_cccccc_ffffff"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_sign_p_f_failed_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/text_select"
                            android:textColor="@color/color_303030"
                            android:textSize="@dimen/text_size_26px" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="6dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/qdrive_btn_icon_down" />
                    </RelativeLayout>

                    <Spinner
                        android:id="@+id/spinner_p_f_failed_reason"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_sign_p_f_failed_reason"
                        android:layout_alignParentEnd="true"
                        android:background="#FFFFFF"
                        android:prompt="@string/text_select"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/text_pickup_date_retried"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px" />

                    <RelativeLayout
                        android:id="@+id/layout_sign_p_f_retry_date"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/border_radius_5_cccccc_ffffff"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_sign_p_f_retry_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/text_select"
                            android:textColor="@color/color_303030"
                            android:textSize="@dimen/text_size_26px" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="6dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/qdrive_btn_icon_down" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/text_memo"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px" />

                    <EditText
                        android:id="@+id/edit_sign_p_f_memo"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_radius_5_e5e5e5_ffffff"
                        android:maxLength="99"
                        android:padding="10dp"
                        android:textColor="@color/color_8f8f8f"
                        android:textSize="@dimen/text_size_30px"
                        tools:text="Driver memo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/layout_sign_p_f_take_photo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_take_photo"
                                android:textColor="@color/color_303030"
                                android:textSize="@dimen/text_size_26px" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/qdrive_btn_icon_camera" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_sign_p_f_gallery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_gallery"
                                android:textColor="@color/color_303030"
                                android:textSize="@dimen/text_size_26px" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/qdrive_btn_icon_pic" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextureView
                            android:id="@+id/texture_sign_p_f_preview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_capture_preview" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_sign_p_f_visit_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    tools:background="@drawable/qdrive_img_default" />

                <Button
                    android:id="@+id/btn_sign_p_f_save"
                    android:layout_width="131dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/bg_radius_30_4fb648"
                    android:gravity="center"
                    android:text="@string/button_save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_32px" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>