<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border_round_5_e5e5e5"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/qr_img"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_date"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/text_size_30px" />

                <TextView
                    android:id="@+id/text_qrcode_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/text_size_30px"
                    android:textStyle="bold"
                    tools:text="2018-10-02" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_job_id"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/text_size_30px" />

                <TextView
                    android:id="@+id/text_job_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/text_size_30px"
                    android:textStyle="bold"
                    tools:text="CR2018000008" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_vendor_code"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/text_size_30px" />

                <TextView
                    android:id="@+id/text_vendor_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/text_size_30px"
                    android:textStyle="bold"
                    tools:text="QX" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/qr_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            tools:src="@drawable/qdrive_btn_icon_seven" />

    </RelativeLayout>

</RelativeLayout>