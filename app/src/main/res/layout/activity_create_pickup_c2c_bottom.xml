<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f6f6"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!--  NOTIFICATION.  Sender Information -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/text_sender_information"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/text_size_28px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/back_round_15_border_aeaeae"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/text_load_default_setting"
            android:textColor="@color/color_aeaeae"
            android:textSize="@dimen/text_size_32px"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="25dp"
        android:paddingEnd="20dp"
        android:paddingBottom="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_sender_name"
                    android:textColor="@color/color_767676"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:includeFontPadding="false"
                    android:text="@string/symbol_star"
                    android:textColor="@color/color_4fb648"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_rect_bottom_border_f6f6f6"
                android:gravity="top"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_36px"
                tools:text="Hyemi Kim" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_pickup_address"
                    android:textColor="@color/color_767676"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:includeFontPadding="false"
                    android:text="@string/symbol_star"
                    android:textColor="@color/color_4fb648"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="110dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/layout_c2c_sender_address_search"
                        android:background="@drawable/back_rect_bottom_border_f6f6f6"
                        android:textColor="@color/color_aeaeae"
                        android:textSize="@dimen/text_size_36px"
                        tools:text="189720" />

                    <LinearLayout
                        android:id="@+id/layout_c2c_sender_address_search"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/layout_c2c_sender_address_pin"
                        android:background="@drawable/back_round_15_border_4fb648"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="@drawable/btn_search_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/text_search"
                            android:textColor="@color/color_4fb648"
                            android:textSize="@dimen/text_size_32px" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/layout_c2c_sender_address_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/back_round_15_border_4fb648"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_map_green" />
                    </FrameLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_rect_bottom_border_f6f6f6"
                    android:lineSpacingMultiplier="1.2"
                    android:minHeight="30dp"
                    android:textColor="@color/color_aeaeae"
                    android:textSize="@dimen/text_size_36px"
                    tools:text="Gateway west 150 Beach road" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_rect_bottom_border_f6f6f6"
                    android:gravity="top"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"
                    android:minHeight="30dp"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/text_size_36px"
                    tools:text="#18-00" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_mobile_no"
                    android:textColor="@color/color_767676"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:includeFontPadding="false"
                    android:text="@string/symbol_star"
                    android:textColor="@color/color_4fb648"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/back_rect_bottom_border_f6f6f6"
                android:gravity="top"
                android:textColor="@color/color_aeaeae"
                android:textSize="@dimen/text_size_36px"
                tools:text="+65(SG)" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@drawable/back_rect_bottom_border_f6f6f6"
                android:gravity="top"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_36px"
                tools:text="109-555-5687" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:minHeight="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="@string/text_remarks"
                android:textColor="@color/color_767676"
                android:textSize="@dimen/text_size_32px"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_rect_bottom_border_f6f6f6"
                android:gravity="top"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_36px"
                tools:text="memo memo" />
        </LinearLayout>
    </LinearLayout>

    <!--  NOTIFICATION.  Delivery Information -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/text_delivery_information"
        android:textColor="@color/color_232323"
        android:textSize="@dimen/text_size_28px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="25dp"
        android:paddingEnd="20dp"
        android:paddingBottom="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_receiver_name"
                    android:textColor="@color/color_767676"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:includeFontPadding="false"
                    android:text="@string/symbol_star"
                    android:textColor="@color/color_4fb648"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_rect_bottom_border_f6f6f6"
                android:gravity="top"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_36px"
                tools:text="sh5000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_receiver_address"
                    android:textColor="@color/color_767676"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:includeFontPadding="false"
                    android:text="@string/symbol_star"
                    android:textColor="@color/color_4fb648"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="110dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/layout_c2c_delivery_address_search"
                        android:background="@drawable/back_rect_bottom_border_f6f6f6"
                        android:textColor="@color/color_aeaeae"
                        android:textSize="@dimen/text_size_36px"
                        tools:text="189720" />

                    <LinearLayout
                        android:id="@+id/layout_c2c_delivery_address_search"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/back_round_15_border_4fb648"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="@drawable/btn_search_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/text_search"
                            android:textColor="@color/color_4fb648"
                            android:textSize="@dimen/text_size_32px" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_rect_bottom_border_f6f6f6"
                    android:lineSpacingMultiplier="1.2"
                    android:minHeight="30dp"
                    android:textColor="@color/color_aeaeae"
                    android:textSize="@dimen/text_size_36px"
                    tools:text="Gateway west 150 Beach road" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_rect_bottom_border_f6f6f6"
                    android:gravity="top"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"
                    android:minHeight="30dp"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/text_size_36px"
                    tools:text="#18-00" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_mobile_no"
                    android:textColor="@color/color_767676"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:includeFontPadding="false"
                    android:text="@string/symbol_star"
                    android:textColor="@color/color_4fb648"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/back_rect_bottom_border_f6f6f6"
                android:gravity="center_vertical"
                android:textColor="@color/color_aeaeae"
                android:textSize="@dimen/text_size_36px"
                tools:text="+65(SG)" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@drawable/back_rect_bottom_border_f6f6f6"
                android:gravity="top"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_36px"
                tools:text="109-555-5687" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_c2c_order_register"
        android:layout_width="131dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back_round_20_4fb648"
        android:gravity="center"
        android:text="@string/text_register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_38px" />
</LinearLayout>