<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/qdrive_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_order_complete"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/text_size_52px"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/layout_qd_step5_confirm"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button_eraser"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/button_confirm"
                android:textAllCaps="false"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/text_size_34px" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/qdrive_setting_icon_arrow_r" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_qd_step5_my_order"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_eraser"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/text_my_qdelivery"
                android:textAllCaps="false"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/text_size_34px" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/qdrive_setting_icon_arrow_r" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>