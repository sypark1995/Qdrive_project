<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_select_date"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/text_size_34px"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_background_sign">

            <TextView
                android:id="@+id/text_qd_step3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="@string/text_select_date"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/text_size_26px" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="6dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/qdrive_btn_icon_down" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/text_select_time"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/text_size_34px"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_background_sign">

            <TextView
                android:id="@+id/text_qd_step3_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="@string/text_select_time"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/text_size_26px" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="6dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/qdrive_btn_icon_down" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/text_pickup_memo"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/text_size_34px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_qd_step3_memo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_background_sign"
            android:maxLength="100"
            android:padding="10dp"
            android:textColor="@color/color_8f8f8f"
            android:textSize="@dimen/text_size_30px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_qd_step3_next"
            android:layout_width="131dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/back_round_30_4fb648"
            android:text="@string/button_next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_36px" />
    </RelativeLayout>
</LinearLayout>