<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/layout_outlet_status_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_bottom"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_outlet_status_total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="@dimen/text_size_40px"
                android:textStyle="bold"
                tools:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/text_total"
                android:textAllCaps="true"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="@dimen/text_size_24px"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_outlet_status_delivery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_bottom"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_outlet_status_delivery_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="@dimen/text_size_40px"
                android:textStyle="bold"
                tools:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/text_delivery"
                android:textAllCaps="true"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="@dimen/text_size_24px"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_outlet_status_retrieve"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_bottom"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_outlet_status_retrieve_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="@dimen/text_size_40px"
                android:textStyle="bold"
                tools:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/text_retrieve"
                android:textAllCaps="true"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="@dimen/text_size_24px"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f0f0f0"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:id="@+id/layout_outlet_status_condition"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/border_round_5_cccccc">

                <TextView
                    android:id="@+id/text_outlet_status_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/text_outlet_status_2"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/text_size_22px" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/qdrive_btn_icon_down" />
            </RelativeLayout>

            <Spinner
                android:id="@+id/spinner_outlet_status_condition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_outlet_status_condition"
                android:layout_marginStart="10dp"
                android:background="#FFFFFF"
                android:minWidth="50dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layout_outlet_status_outlet_code"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_round_5_cccccc"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_outlet_status_outlet_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/text_all"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_22px" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="6dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/qdrive_btn_icon_down" />
                </RelativeLayout>

                <Spinner
                    android:id="@+id/spinner_outlet_status_outlet_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_outlet_status_outlet_code"
                    android:layout_marginStart="10dp"
                    android:background="#FFFFFF"
                    android:minWidth="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp">

                <RelativeLayout
                    android:id="@+id/layout_outlet_status_outlet_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_round_5_cccccc"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_outlet_status_outlet_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="25dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/text_all"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_22px"
                        tools:text="Interops sandbox Locker 5 @ Tekka Centre" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="6dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/qdrive_btn_icon_down" />
                </RelativeLayout>

                <Spinner
                    android:id="@+id/spinner_outlet_status_outlet_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_outlet_status_outlet_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:background="#FFFFFF" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_round_10_ffffff"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_list_search_icon"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/qdrive_btn_icon_expand" />

            <SearchView
                android:id="@+id/searchview_outlet_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toStartOf="@id/layout_outlet_status_sort"
                android:layout_toEndOf="@id/img_list_search_icon"
                android:focusable="false"
                android:iconifiedByDefault="false"
                android:searchIcon="@null" />

            <FrameLayout
                android:id="@+id/layout_outlet_status_sort"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/qdrive_btn_icon_add" />
            </FrameLayout>

            <Spinner
                android:id="@+id/spinner_outlet_status_sort"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:spinnerMode="dropdown"
                android:visibility="visible" />
        </RelativeLayout>

        <ExpandableListView
            android:id="@+id/exlist_outlet_status_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_f0f0f0"
            android:childDivider="@null"
            android:divider="@null"
            android:groupIndicator="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>