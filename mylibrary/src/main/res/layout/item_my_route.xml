<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="route"
            type="com.giosis.library.main.route.RouteModel" />

        <variable
            name="viewModel"
            type="com.giosis.library.main.route.TodayMyRouteViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_item_route_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{route.estimatedTime}"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_36px"
            app:layout_constraintBottom_toBottomOf="@id/layout_item_route_type"
            app:layout_constraintEnd_toStartOf="@id/layout_item_route_type"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="14:05" />

        <RelativeLayout
            android:id="@+id/layout_item_route_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@id/text_item_route_time"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_item_route_navigator"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:background="@drawable/border_round_30_4fb648"
                android:onClick="@{() -> viewModel.onClickItem()}"
                android:text="@string/text_start_navigator"
                android:textAllCaps="false"
                android:textColor="@color/color_4fb648"
                android:textSize="@dimen/text_size_32px"
                android:visibility="@{position == 0? View.VISIBLE: View.GONE}" />

            <TextView
                android:id="@+id/btn_item_route_job_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.routeType + '-' + route.contents.size()}"
                android:textColor="@color/color_3b88ee"
                android:textSize="@dimen/text_size_42px"
                android:textStyle="bold"
                android:visibility="@{position == 0? View.GONE: View.VISIBLE}"
                tools:text="P-1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_item_route_distance"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:visibility="@{position == viewModel.routeData.routeList.size()-1? View.GONE: View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/layout_item_route_type_info_container"
            app:layout_constraintEnd_toEndOf="@id/text_item_route_time"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_item_route_time">

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/color_b1b1b1" />

            <TextView
                android:id="@+id/distance_text"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:layout_centerInParent="true"
                android:background="@drawable/border_rect_b1b1b1"
                android:gravity="center"
                android:text="@{route.getItemDistanceKm}"
                android:textColor="@color/color_b1b1b1"
                android:textSize="@dimen/text_size_24px"
                android:textStyle="bold"
                tools:text="19.5Km" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/layout_item_route_type_info_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:minHeight="40dp"
            android:visibility="@{position == 0? View.INVISIBLE: View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="@id/layout_item_route_type"
            app:layout_constraintTop_toBottomOf="@id/layout_item_route_type">

            <LinearLayout
                android:id="@+id/layout_item_route_type_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_8_3b88ee"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_item_route_zip_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{route.zip_code}"
                        android:textColor="@color/color_3b88ee"
                        android:textSize="@dimen/text_size_30px"
                        android:textStyle="bold"
                        tools:text="608830" />

                    <TextView
                        android:id="@+id/text_item_route_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@{route.name}"
                        android:textColor="@color/color_3b88ee"
                        android:textSize="@dimen/text_size_30px"
                        tools:text="Drypers Pte Ltd" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_item_route_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{route.address}"
                    android:textColor="@color/color_767676"
                    android:textSize="@dimen/text_size_30px"
                    tools:text="CWT Jurong East Logistics Centre 5A Toh Guan Road Eastg, #01-01" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/color_1a000000" />

                <TextView
                    android:id="@+id/tracking_no_list_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.3"
                    android:text="@{route.getContent}"
                    android:textColor="@color/color_767676"
                    android:textSize="@dimen/text_size_24px"
                    tools:text="Q200123456SGSG | 31 Jan 13:00~17:00\nQ200123789SGSG | 31 Jan 13:00~17:00" />
            </LinearLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
