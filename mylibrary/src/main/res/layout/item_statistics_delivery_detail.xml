<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_d_d_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_d_d_shipping_no"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_shipping_no"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/text_d_d_tracking_no"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_tracking_no"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/text_d_d_status"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_status"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/text_d_d_delivered_date"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_delivered_date"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/text_size_28px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f6f6f6" />
</LinearLayout>