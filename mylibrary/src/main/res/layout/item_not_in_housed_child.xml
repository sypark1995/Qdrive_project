<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_not_in_parcels_child_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="11dp"
        android:paddingTop="11dp">

        <TextView
            android:id="@+id/text_not_in_parcels_child_scanned_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/text_size_30px"
            android:textStyle="bold"
            tools:text="SGP123456789" />

        <TextView
            android:id="@+id/text_not_in_parcels_child_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/text_not_in_parcels_child_currency"
            android:textColor="@color/color_ff0000"
            android:textSize="@dimen/text_size_30px"
            android:textStyle="bold"
            tools:text="136" />

        <TextView
            android:id="@+id/text_not_in_parcels_child_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textColor="@color/color_ff0000"
            android:textSize="@dimen/text_size_30px"
            android:textStyle="bold"
            tools:text="(SGD)" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_e5e5e5" />
</LinearLayout>