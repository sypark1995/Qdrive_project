<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="20dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/img_language_setting_checked"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_checked" />

    <TextView
        android:id="@+id/text_language_setting_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/img_language_setting_checked"
        android:gravity="center_vertical"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/text_size_32px"
        tools:text="@string/text_language_en" />
</RelativeLayout>
