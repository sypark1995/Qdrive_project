<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">

                    <TextView
                        android:id="@+id/text_sign_p_outlet_address_title"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_federated_locker_address"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px" />

                    <TextView
                        android:id="@+id/text_sign_p_outlet_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingBottom="10dp"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px"
                        android:textStyle="bold"
                        tools:text="(678213) Upper Bukit Timah Road, #01-04 Singapore" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_e5e5e5" />

                <LinearLayout
                    android:id="@+id/layout_sign_p_outlet_operation_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_operation_hour"
                            android:textColor="@color/color_303030"
                            android:textSize="@dimen/text_size_30px" />

                        <TextView
                            android:id="@+id/text_sign_p_outlet_operation_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/color_303030"
                            android:textSize="@dimen/text_size_30px"
                            android:textStyle="bold"
                            tools:text="7am-11pm Daily" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_e5e5e5" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_pickup_no"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px" />

                    <TextView
                        android:id="@+id/text_sign_p_outlet_pickup_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_ff0000"
                        android:textSize="@dimen/text_size_30px"
                        android:textStyle="bold"
                        tools:text="SGP123456789" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_e5e5e5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">

                    <TextView
                        android:id="@+id/text_sign_p_outlet_applicant_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:text="@string/text_applicant"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px" />

                    <TextView
                        android:id="@+id/text_sign_p_outlet_applicant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/text_sign_p_outlet_applicant_title"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="2"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px"
                        android:textStyle="bold"
                        tools:text="Ono shinseitaru" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_e5e5e5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_total_qty"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px" />

                    <TextView
                        android:id="@+id/text_sign_p_outlet_total_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px"
                        android:textStyle="bold"
                        tools:text="99" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_sign_p_outlet_7e_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:id="@+id/layout_sign_p_outlet_qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/border_round_5_e5e5e5"
                    android:padding="10dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="5dp"
                        android:layout_toStartOf="@id/img_sign_p_outlet_qrcode"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_date"
                                android:textColor="@color/color_303030"
                                android:textSize="@dimen/text_size_30px" />

                            <TextView
                                android:id="@+id/text_sign_p_outlet_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/color_303030"
                                android:textSize="@dimen/text_size_30px"
                                android:textStyle="bold"
                                tools:text="2018-11-14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_job_id"
                                android:textColor="@color/color_303030"
                                android:textSize="@dimen/text_size_30px" />

                            <TextView
                                android:id="@+id/text_sign_p_outlet_job_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/color_303030"
                                android:textSize="@dimen/text_size_30px"
                                android:textStyle="bold"
                                tools:text="CR2018000008" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_vendor_code"
                                android:textColor="@color/color_303030"
                                android:textSize="@dimen/text_size_30px" />

                            <TextView
                                android:id="@+id/text_sign_p_outlet_vendor_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/color_303030"
                                android:textSize="@dimen/text_size_30px"
                                android:textStyle="bold"
                                tools:text="QX" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_sign_p_outlet_qrcode"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        tools:src="@drawable/qdrive_btn_icon_seven" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_sign_p_outlet_qrcode_error"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/border_round_5_e5e5e5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.2"
                        android:text="@string/msg_qrcode_loading_error"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_30px" />

                    <Button
                        android:id="@+id/btn_sign_p_outlet_reload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_round_30_cccccc"
                        android:text="@string/button_reload"
                        android:textAllCaps="false"
                        android:textColor="@color/color_303030"
                        android:textSize="@dimen/text_size_28px" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="25dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_tracking_no"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/text_size_30px" />

                <ListView
                    android:id="@+id/list_sign_p_outlet_tracking_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_sign_p_outlet_next"
                android:layout_width="131dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_round_30_4fb648"
                android:gravity="center"
                android:text="@string/button_next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36px" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>