<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_message_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:id="@+id/text_message_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/text_size_32px"
        android:textStyle="bold"
        tools:text="SG19609734" />

    <TextView
        android:id="@+id/text_message_list_item_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@id/text_message_list_item_date"
        android:layout_toEndOf="@+id/text_message_list_item_title"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/text_size_32px"
        tools:text="message1 message1 message1 message1" />

    <TextView
        android:id="@+id/text_message_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:textColor="@color/color_767676"
        android:textSize="@dimen/text_size_28px"
        tools:text="2018-07-17" />
</RelativeLayout>