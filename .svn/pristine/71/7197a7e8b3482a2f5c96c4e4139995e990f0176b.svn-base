<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Enabled states -->
        
    <item android:state_checked="true" android:state_window_focused="false"
          android:state_enabled="true"
          android:drawable="@drawable/flash_on_normal" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:state_enabled="true"
          android:drawable="@drawable/flash_off_normal" />

    <item android:state_checked="true" android:state_pressed="true"
          android:state_enabled="true"
          android:drawable="@drawable/flash_on_press" />
    <item android:state_checked="false" android:state_pressed="true"
          android:state_enabled="true"
          android:drawable="@drawable/flash_off_press" />

    <item android:state_checked="true" android:state_focused="true"
          android:state_enabled="true"
          android:drawable="@drawable/flash_on_normal" />
    <item android:state_checked="false" android:state_focused="true"
          android:state_enabled="true"
          android:drawable="@drawable/flash_off_normal" />

    <item android:state_checked="false"
          android:state_enabled="true"
          android:drawable="@drawable/flash_off_normal" />
    <item android:state_checked="true"
          android:state_enabled="true"
          android:drawable="@drawable/flash_on_normal" />


    <!-- Disabled states -->

    <item android:state_checked="true" android:state_window_focused="false"
          android:drawable="@drawable/flash_on_normal" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:drawable="@drawable/flash_off_normal" />

    <item android:state_checked="true" android:state_focused="true"
          android:drawable="@drawable/flash_on_normal" />
    <item android:state_checked="false" android:state_focused="true"
          android:drawable="@drawable/flash_off_normal" />

    <item android:state_checked="false" android:drawable="@drawable/flash_off_normal" />
    <item android:state_checked="true" android:drawable="@drawable/flash_on_normal" />

</selector>