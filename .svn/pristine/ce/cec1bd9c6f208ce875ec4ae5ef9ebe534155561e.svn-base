<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/top_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/text_sender"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/text_size_34px"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_qd_step2_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_button_normal_30"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:paddingEnd="8dp"
            android:paddingBottom="3dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/qdrive_btn_icon_big_on" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_save"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/text_size_28px" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/text_name1"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/text_size_30px" />

            <EditText
                android:id="@+id/edit_qd_step2_sender_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/back_bottom"
                android:hint="@string/text_full_name"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/color_8f8f8f"
                android:textSize="@dimen/text_size_30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/text_country"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/text_size_30px" />

            <TextView
                android:id="@+id/text_qd_step2_sender_country"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/back_bottom"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/color_8f8f8f"
                android:textSize="@dimen/text_size_30px"
                tools:text="Singapore(+65)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/text_contact_no"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/text_size_30px" />

            <EditText
                android:id="@+id/edit_qd_step2_sender_contact_no"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/back_bottom"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/color_8f8f8f"
                android:textSize="@dimen/text_size_30px" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:text="@string/msg_correct_mobile_number"
            android:textColor="@color/color_8f8f8f"
            android:textSize="@dimen/text_size_26px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_address"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/text_size_30px" />

                <ImageView
                    android:id="@+id/img_qd_step2_address_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/qdrive_btn_icon_expand" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_qd_step2_sender_address1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/back_bottom"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/color_8f8f8f"
                    android:textSize="@dimen/text_size_30px"
                    tools:hint="(0179981) Singapore marihdfdri Qxpress Ptd" />

                <EditText
                    android:id="@+id/edit_qd_step2_sender_address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_bottom"
                    android:lineSpacingExtra="5dp"
                    android:minHeight="35dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/color_8f8f8f"
                    android:textSize="@dimen/text_size_30px"
                    tools:hint="fordffdfdfdfi Back Address" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/test_address1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_bottom"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/color_8f8f8f"
            android:textSize="@dimen/text_size_30px"
            tools:hint="(0179981) Singapore marihdfdri Qxpress Ptd" />

        <EditText
            android:id="@+id/test_address2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/back_bottom"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/color_8f8f8f"
            android:textSize="@dimen/text_size_30px"
            tools:hint="(0179981) Singapore marihdfdri Qxpress Ptd" />
    </LinearLayout>
</LinearLayout>