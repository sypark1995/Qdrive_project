<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_qd_my_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/layout_qd_my_item_status"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4fb648" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:id="@+id/layout_qd_my_item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_pickup_no"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_32px" />

                <TextView
                    android:id="@+id/text_qd_my_item_pickup_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_303030"
                    android:textSize="@dimen/text_size_34px"
                    android:textStyle="bold"
                    tools:text="SG19611820" />

                <TextView
                    android:id="@+id/text_qd_my_item_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_363BE7"
                    android:textSize="@dimen/text_size_32px"
                    tools:text="Pickup Request" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_qd_my_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_qd_my_item_info"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/text_size_32px"
                tools:text="2019-09-02" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>